{
  "id": null,
  "uid": "43v3r-system-health",
  "title": "43v3r System Health",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "AI Run Errors (1h)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (agent) (increase(ai_runs_total{status=\"error\"}[1h]))",
          "legendFormat": "{{agent}}"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Workflows Failed (1h)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (workflow_name) (increase(workflows_failed_total[1h]))",
          "legendFormat": "{{workflow_name}}"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "stat",
      "title": "System Health Status",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "system_health_status{scope=\"global\"}",
          "legendFormat": "status"
        }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 6, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Backend Error Rate",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "(sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total[5m])))",
          "legendFormat": "error_rate"
        }
      ],
      "gridPos": { "x": 6, "y": 8, "w": 18, "h": 6 }
    }
  ]
}
